{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mbhuiyan13 / multi-container-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "mbhuiyan13 / multi-container-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "mbhuiyan13 / multi-container-worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "mbhuiyan13 / multi-container-nginx",
            "essential": true,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}